import React from 'react'
import Dialogs from "./Dialogs";
import {addChatMessageActionCreator, updateChatMessageActionCreator} from "../../redux/dialogsReducer";


const DialogsContainer = (props) => {
    let state = props.store.getState().chats

    let onAddMessage = () => {
        props.store.dispatch(addChatMessageActionCreator())
    }
    let onUpdateChatMessage = (message) => {
        props.store.dispatch(updateChatMessageActionCreator(message))
    }


    return (
        <Dialogs addMessage={onAddMessage}
                 updateChatMessage={onUpdateChatMessage}
                 newChatMessage={state.newChatMessage}
                 dialogsData={state.dialogs}
                 messagesData={state.messages}
        />
    )
}

export default DialogsContainer